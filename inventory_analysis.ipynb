   "source": [
    "import pandas as pd\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import seaborn as sns\n",
    "\n",
    "# Set plot style\n",
    "sns.set(style=\"whitegrid\")\n",
    "\n",
    "# Load the dataset\n",
    "# Define the path to the dataset\n",
    "data_path = "." # Replace with the actual path if different, e.g., "." if in the same directory\n",
    "file_name = \"retail_store_inventory.csv\"\n",
    "inventory_df = pd.read_csv(f\"{data_path}/{file_name}\")\n",
    "\n",
    "# Convert Date column to datetime objects\n",
    "inventory_df["Date"] = pd.to_datetime(inventory_df["Date"])\n",
    "\n",
    "# Convert Holiday/Promotion to boolean\n",
    "inventory_df["Is Holiday/Promotion"] = inventory_df["Holiday/Promotion"].astype(bool)\n",
    "inventory_df.drop(\"Holiday/Promotion\", axis=1, inplace=True)\n",
    "\n",
    "# Display basic information and the first few rows\n",
    "print(\"Dataset Info:\")\n",
    "inventory_df.info()\n",
    "print(\"\nDataset Head:\")\n",
    "print(inventory_df.head())"
   ]
  },
  {
