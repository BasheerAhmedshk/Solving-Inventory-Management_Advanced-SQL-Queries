    "## 3. Advanced Inventory Analysis & KPIs\n",
    "\n",
    "Calculate more advanced KPIs like Inventory Turnover, Stockout Rate, identify Fast/Slow Moving items, and estimate Reorder Points."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# --- Inventory Turnover Ratio (Approximation) ---\n",
    "# Note: Requires Cost of Goods Sold (COGS). We approximate using Sales Revenue.\n",
    "# Calculate Revenue\n",
    "inventory_df["Revenue"] = inventory_df["Units Sold"] * inventory_df["Price"] * (1 - inventory_df["Discount"] / 100.0) \n",
    "\n",
    "# Calculate Average Inventory Value (using Price as cost proxy)\n",
    "inventory_df["Inventory Value"] = inventory_df["Inventory Level"] * inventory_df["Price"]\n",
    "avg_inventory_value = inventory_df.groupby(["Product ID", pd.Grouper(key=\"Date\", freq=\"ME\")])["Inventory Value"].mean().mean() # Rough overall average\n",
    "total_revenue = inventory_df["Revenue"].sum()\n",
    "\n",
    "# Approximate Inventory Turnover Ratio (using Revenue instead of COGS)\n",
    "# This is a simplification. A proper calculation needs COGS.\n",
    "if avg_inventory_value > 0:\n",
    "    inventory_turnover_ratio = total_revenue / avg_inventory_value\n",
    "    print(f\"\nApproximate Overall Inventory Turnover Ratio: {inventory_turnover_ratio:.2f}\")\n",
    "else:\n",
    "    print(\"\nCould not calculate Inventory Turnover Ratio (Average Inventory Value is zero or negative).\")\n",
    "\n",
    "# --- Fast-Moving vs. Slow-Moving Products ---\n",
    "# Based on Total Units Sold\n",
    "product_sales_summary = inventory_df.groupby("Product ID")["Units Sold"].sum().reset_index()\n",
    "sales_quantile_75 = product_sales_summary["Units Sold"].quantile(0.75)\n",
    "sales_quantile_25 = product_sales_summary["Units Sold"].quantile(0.25)\n",
    "\n",
    "fast_movers = product_sales_summary[product_sales_summary["Units Sold"] >= sales_quantile_75]\n",
    "slow_movers = product_sales_summary[product_sales_summary["Units Sold"] <= sales_quantile_25]\n",
    "\n",
    "print(f\"\nNumber of Fast-Moving Products (>= 75th percentile): {len(fast_movers)}\")\n",
    "print(f\"Number of Slow-Moving Products (<= 25th percentile): {len(slow_movers)}\")\n",
    "print(\"\nTop 5 Fast Movers:\")\n",
    "print(fast_movers.sort_values(by=\"Units Sold\", ascending=False).head())\n",
    "print(\"\nTop 5 Slow Movers:\")\n",
    "print(slow_movers.sort_values(by=\"Units Sold\", ascending=True).head())\n",
    "\n",
    "# --- Stockout Analysis (Approximation) ---\n",
    "# Define stockout as Inventory Level = 0 on a day when Units Sold > 0\n",
    "stockout_days = inventory_df[(inventory_df["Inventory Level"] == 0) & (inventory_df["Units Sold"] > 0)]\n",
    "total_possible_days = inventory_df[["Date", "Store ID", "Product ID"]].drop_duplicates().shape[0]\n",
    "stockout_instances = stockout_days.shape[0]\n",
    "\n",
    "if total_possible_days > 0:\n",
    "    stockout_rate = (stockout_instances / total_possible_days) * 100\n",
    "    print(f\"\nApproximate Stockout Rate (Instances where Inv=0 but Sales>0): {stockout_rate:.2f}%\")\n",
    "else:\n",
    "    print(\"\nCould not calculate Stockout Rate.\")\n",
    "print(f\"Total Stockout Instances Found: {stockout_instances}\")\n",
    "\n",
    "# --- Reorder Point Estimation (Simple Example: Avg Daily Sales * Lead Time + Safety Stock) ---\n",
    "# Assumptions: Lead Time = 7 days, Safety Stock = 3 days of Avg Sales\n",
    "lead_time_days = 7\n",
    "safety_stock_days = 3\n",
    "\n",
    "avg_daily_sales = inventory_df.groupby("Product ID")["Units Sold"].mean().reset_index()\n",
    "avg_daily_sales.rename(columns={\"Units Sold\": \"Avg Daily Sales\"}, inplace=True)\n",
    "\n",
    "avg_daily_sales["Safety Stock"] = avg_daily_sales["Avg Daily Sales"] * safety_stock_days\n",
    "avg_daily_sales["Reorder Point"] = (avg_daily_sales["Avg Daily Sales"] * lead_time_days) + avg_daily_sales["Safety Stock"]\n",
    "\n",
    "print(\"\nEstimated Reorder Points (Top 5 Products based on Avg Sales):\")\n",
    "print(avg_daily_sales.sort_values(by=\"Avg Daily Sales\", ascending=False).head())\n",
    "\n",
    "# --- Low Inventory Detection ---\n",
    "# Identify products currently below their estimated reorder point\n",
    "# Get current inventory levels (assuming latest date in dataset is \"current\")\n",
    "current_inventory = inventory_df[inventory_df["Date"] == inventory_df["Date"].max()]\n",
    "current_inventory = current_inventory[["Product ID", "Store ID", "Inventory Level"]]\n",
    "\n",
    "# Merge with reorder points (Need to handle Store level variations if needed - simplifying here)\n",
    "low_inventory_check = pd.merge(current_inventory, avg_daily_sales[["Product ID", "Reorder Point"]], on="Product ID")\n",
    "low_inventory_items = low_inventory_check[low_inventory_check["Inventory Level"] < low_inventory_check["Reorder Point"]]\n",
    "\n",
    "print(f\"\nNumber of Product/Store combinations below estimated Reorder Point: {len(low_inventory_items)}\")\n",
    "print(\"\nExamples of Items Below Reorder Point:\")\n",
    "print(low_inventory_items.head())"
   ]
